{
  "name": "radcontrol-app",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "noop": "node -e \"process.exit(0)\"",
    "vite:dev": "vite --port 1420 --strictPort",
    "vite:build": "tsc && vite build",
    "vite:preview": "vite preview",
    "dev": "npm run vite:dev",
    "build": "npm run vite:build",
    "preview": "npm run vite:preview",
